<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Green accent line on top -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/accent" />
            <corners
                android:topLeftRadius="@dimen/mini_player_corner_radius"
                android:topRightRadius="@dimen/mini_player_corner_radius"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
        </shape>
    </item>
    <!-- Dark background inset below the accent line -->
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_elevated" />
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
        </shape>
    </item>
</layer-list>
